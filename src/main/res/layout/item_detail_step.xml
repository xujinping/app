<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tv_item_step_num"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/red"
        android:textSize="23dp" />

    <TextView
        android:id="@+id/tv_item_step_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/tv_item_step_num"
        android:textColor="@color/black"
        android:textSize="20sp" />

    <com.android.volley.toolbox.NetworkImageView
        android:id="@+id/img_step_list"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_item_step_content"
        android:layout_centerHorizontal="true"
        android:layout_centerInParent="true"
        android:layout_toRightOf="@+id/tv_item_step_num"
        android:scaleType="fitXY"
        android:src="@drawable/about_bg" />
</RelativeLayout>